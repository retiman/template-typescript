{
  "name": "template-typescript-repository",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Min Huang",
  "email": "min.huang@alumni.usc.edu",
  "description": "Template typescript repository",
  "homepage": "https://github.com/retiman/template-typescript-repository#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retiman/template-typescript-repository.git"
  },
  "bugs": {
    "url": "https://github.com/retiman/template-typescript-repository/issues"
  },
  "scripts": {
    "build": "tsc --declaration",
    "clean": "rm -rf coverage dist *.tgz",
    "format": "prettier --write **/*.ts",
    "lint": "eslint --fix **/*.ts",
    "test": "jest",
    "all": "npm run clean && npm run format && npm run lint && npm run build && npm run test"
  },
  "main": "dist/src/index.js",
  "files": [
    "dist/*.ts",
    "!dist/*.test.ts"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "dotenv": "^16.0.1",
    "editorconfig": "^0.15.3",
    "eslint": "^8.15.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
