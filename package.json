{
  "name": "template-typescript-repository",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Min Huang",
  "email": "min.huang@alumni.usc.edu",
  "description": "Template typescript repository",
  "homepage": "https://github.com/retiman/template-typescript-repository#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retiman/template-typescript-repository.git"
  },
  "bugs": {
    "url": "https://github.com/retiman/template-typescript-repository/issues"
  },
  "scripts": {
    "build": "tsc --declaration",
    "clean": "node scripts/clean.mjs",
    "fix": "npm run lint:fix && npm run format:fix",
    "format": "prettier --check **/*",
    "format:fix": "prettier --write **/*",
    "lint": "eslint **/*",
    "lint:fix": "eslint --fix **/*",
    "postbuild": "node scripts/postbuild.mjs",
    "test": "npm run test:unit",
    "test:unit": "jest --config test/unit/jest.config.mjs",
    "test:integration": "jest --config test/integration/jest.config.mjs",
    "all": "npm run clean && npm run fix && npm run build && npm run test"
  },
  "main": "dist/index.js",
  "directories": {
    "src": "src",
    "test": "test"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.23.0",
    "dotenv": "^16.0.1",
    "editorconfig": "^2.0.0",
    "eslint": "^8.15.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "jest": "^29.6.1",
    "nock": "^13.3.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
